{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "log:allow-log",
    "fs:write-files",
    "fs:read-files",
    "fs:allow-exists",
    "fs:allow-appdata-write-recursive",
    "fs:scope-app-recursive",
    "fs:scope-app",
    "fs:scope",
    {
      "identifier": "fs:scope",
      "allow": [{"path": "$APPDATA/*"}]
    }
  ]
}